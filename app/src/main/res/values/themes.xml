<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Istoriya" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/pink</item>
        <item name="android:fontFamily">@font/poppins_regular</item>



    </style>

    <style name="Theme.Istoriya.FloatingAccentButtonOverlay" >
        <item name="colorAccent">@color/pink</item>
    </style>


    <style name="Theme.Istoriya" parent="Base.Theme.Istoriya" />

    <style name="Theme.Istoriya.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.Istoriya.AppWidgetContainer" parent="Theme.Istoriya.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">16dp</item>
    </style>
</resources>